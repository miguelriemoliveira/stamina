<node name="throttle_wsright_rgb_camera_info" pkg="topic_tools" type="throttle" args=" messages /$(arg wsright_camera)/rgb_registered/camera_info $(arg throttle)" required="true"/>
<node name="throttle_wsright_rgb_camera" pkg="topic_tools" type="throttle" args=" messages /$(arg wsright_camera)/rgb_registered/image_raw $(arg throttle)" required="true"/>

<node name="throttle_wsfront_depth_camera_info" pkg="topic_tools" type="throttle" args=" messages /$(arg wsfront_camera)/depth_registered/camera_info $(arg throttle)" required="true"/>
<node name="throttle_wsfront_depth_camera" pkg="topic_tools" type="throttle" args=" messages /$(arg wsfront_camera)/depth_registered/image_raw $(arg throttle)" required="true"/>
<node name="throttle_wsfront_rgb_camera_info" pkg="topic_tools" type="throttle" args=" messages /$(arg wsfront_camera)/rgb_registered/camera_info $(arg throttle)" required="true"/>
<node name="throttle_wsfront_rgb_camera" pkg="topic_tools" type="throttle" args=" messages /$(arg wsfront_camera)/rgb_registered/image_raw $(arg throttle)" required="true"/>
