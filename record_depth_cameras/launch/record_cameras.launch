<?xml version="1.0"?>
<!--    Records raw depth image and RGB image from OpenNI device (kinect).
The depth image is registered with OpenNI firmware, using default calibration.-->
<launch>

<arg name="wrist_camera" default="wrist_camera"/>
<arg name="wsright_camera" default="workspace_camera_right"/>
<arg name="wsfront_camera" default="kittingbox_camera"/>
<arg name="throttle" default="3.0"/>

<node name="throttle_wrist_depth_camera_info" pkg="topic_tools" type="throttle" args=" messages /$(arg wrist_camera)/depth_registered/camera_info $(arg throttle)" required="true"/>
<node name="throttle_wrist_depth_camera" pkg="topic_tools" type="throttle" args=" messages /$(arg wrist_camera)/depth_registered/image_raw $(arg throttle)" required="true"/>
<node name="throttle_wrist_rgb_camera_info" pkg="topic_tools" type="throttle" args=" messages /$(arg wrist_camera)/rgb_registered/camera_info $(arg throttle)" required="true"/>
<node name="throttle_wrist_rgb_camera" pkg="topic_tools" type="throttle" args=" messages /$(arg wrist_camera)/rgb_registered/image_raw $(arg throttle)" required="true"/>

 <!--
